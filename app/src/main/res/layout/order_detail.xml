<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/lightchocolate"
        android:padding="10dp">

        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="username"
            android:textColor="@color/chocolate"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_user_name"
            android:layout_alignEnd="@+id/order_user_name"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="-212dp"
            android:gravity="center"
            android:text="name"
            android:textColor="@color/chocolate"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_name"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="phone number"
            android:textColor="@color/chocolate"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_phone_number"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="total price"
            android:textColor="@color/chocolate"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_total_price"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="address"
            android:textColor="@color/chocolate"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_address"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Date"
            android:textColor="@color/chocolate"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_time"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_address"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:text="Time"
            android:textColor="@color/chocolate"
            android:textSize="14dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/show_detail_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/order_time"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="-74dp"
            android:backgroundTint="@color/chocolate"
            android:text="SHOW PRODUCTS"
            android:textColor="@color/light2"
            android:textSize="18sp" />


    </RelativeLayout>
</RelativeLayout>