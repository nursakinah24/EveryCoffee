<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <ImageView
        android:id="@+id/product_detail_image"
        android:layout_width="372dp"
        android:layout_height="244dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_detail_price"
        app:layout_constraintVertical_bias="0.00999999"
        app:srcCompat="@drawable/image" />

    <TextView
        android:id="@+id/product_detail_name"
        android:layout_width="189dp"
        android:layout_height="36dp"
        android:text="Product Name"
        android:textColor="@color/chocolate"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/product_detail_price"
        android:layout_width="85dp"
        android:layout_height="39dp"
        android:text="Price"
        android:textColor="@color/chocolate"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/product_detail_name"
        app:layout_constraintStart_toStartOf="@+id/product_detail_name"
        app:layout_constraintTop_toBottomOf="@+id/product_detail_name"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/product_detail_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="@color/chocolate"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_detail_image"
        app:layout_constraintVertical_bias="0.117" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="65dp"
        android:layout_height="51dp"
        android:layout_marginTop="61dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/chocolate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/plus_button"
        app:layout_constraintStart_toEndOf="@+id/minus_button"
        app:layout_constraintTop_toBottomOf="@+id/product_detail_desc"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/plus_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.429"
        app:layout_constraintStart_toEndOf="@+id/minus_button"
        app:layout_constraintTop_toBottomOf="@+id/product_detail_desc"
        app:layout_constraintVertical_bias="0.244"
        app:srcCompat="@drawable/plus" />

    <ImageView
        android:id="@+id/minus_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.274"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_detail_desc"
        app:layout_constraintVertical_bias="0.244"
        app:srcCompat="@drawable/minus" />

    <Button
        android:id="@+id/add_cart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/chocolate"
        android:text="ADD TO CART"
        android:textColor="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" /><![CDATA[

    />


]]>
</androidx.constraintlayout.widget.ConstraintLayout>