<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/background"
tools:context=".OrderConfirmation">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:text="Please confirm your shipment details"
        android:textAlignment="center"
        android:textColor="@color/chocolate"
        android:textSize="18sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/shipment_name"
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/box"
        android:ems="10"
        android:hint="Enter your name"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <EditText
        android:id="@+id/shipment_phone_number"
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:layout_below="@+id/shipment_name"
        android:layout_alignStart="@+id/shipment_name"
        android:layout_alignEnd="@+id/shipment_name"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/box"
        android:ems="10"
        android:hint="Enter your phone number"
        android:inputType="phone"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <EditText
        android:id="@+id/shipment_address"
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:layout_below="@+id/shipment_phone_number"
        android:layout_alignStart="@+id/shipment_phone_number"
        android:layout_alignEnd="@+id/shipment_phone_number"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/box"
        android:hint="Enter your home address"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <Button
        android:id="@+id/confirm_final_order_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipment_address"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="300dp"
        android:text="Confirm"
        android:textColor="@color/background"
        android:textSize="20dp"
        app:backgroundTint="@color/chocolate" />


</RelativeLayout>